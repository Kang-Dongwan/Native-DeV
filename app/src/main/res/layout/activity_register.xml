<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="40sp"
        android:layout_marginTop="25dp"
        android:text="회원가입" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/et_imageview"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/tv_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/user"
        tools:ignore="MissingConstraints"
        android:scaleType="centerCrop"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_imageview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="ID (E-mail)"
        android:inputType="textEmailAddress"
        android:text="" />


    <EditText
        android:id="@+id/et_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/email"
        android:hint="PASSWORD (6자리 이상)"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/et_re_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_pwd"
        android:hint="PASSWORD 재입력"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/et_textview_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_re_pwd"
        android:hint="Name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPersonName"/>

    <Button
        android:id="@+id/btn_regi"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_textview_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="회원가입" />


</RelativeLayout>